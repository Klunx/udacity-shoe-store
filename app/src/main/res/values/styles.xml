<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/comfortaa</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="LabelLayout">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/comfortaa_bold</item>
    </style>

    <style name="LabelLayout.DetailsForm">
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="ErrorLayout">
        <item name="android:textColor">@color/colorError</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/comfortaa_bold</item>
    </style>

    <style name="ButtonApp">
        <item name="android:paddingTop">@dimen/margin_size_x1</item>
        <item name="android:paddingBottom">@dimen/margin_size_x1</item>
        <item name="android:paddingLeft">@dimen/margin_size_x3</item>
        <item name="android:paddingRight">@dimen/margin_size_x3</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/comfortaa_bold</item>
    </style>

    <style name="ButtonApp.PrimaryButton">
        <item name="android:background">@drawable/rounded_background</item>
    </style>

    <style name="ButtonApp.SecondaryButton">
        <item name="android:background">@drawable/secondary_rounded_background</item>
    </style>

    <style name="TitleLabel">
        <item name="android:textSize">40sp</item>
        <item name="android:fontFamily">@font/comfortaa_bold</item>
    </style>

    <style name="BodyLabel">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="CardLayout">
        <item name="android:background">@drawable/rounded_background_card</item>
        <item name="android:layout_marginTop">@dimen/margin_size_x1</item>
        <item name="android:layout_marginBottom">@dimen/margin_size_x1</item>
        <item name="android:layout_marginLeft">@dimen/margin_size_x2</item>
        <item name="android:layout_marginRight">@dimen/margin_size_x2</item>
    </style>

    <style name="CardText">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/comfortaa_bold</item>
    </style>

    <style name="CardText.Description">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/comfortaa</item>
    </style>
</resources>
